{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "rsbc-api-build",
        "creationTimestamp": null
    },
    "objects": [{
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${API_SERVICE_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${API_SERVICE_NAME}"
                }
            },
            "spec": {
                "triggers": [],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_URL}",
                        "ref": "${GIT_REF}"
                    },
                    "contextDir": "${CONTEXT_DIR}"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "incremental": true,
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${API_BUILDER_IMAGE}:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${API_SERVICE_NAME}:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${API_SERVICE_NAME}",
                "generation": 1,
                "creationTimestamp": null,
                "labels": {
                    "app": "${API_SERVICE_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${API_SERVICE_NAME}-pipeline",
                "creationTimestamp": null,
                "labels": {
                    "app": "${API_SERVICE_NAME}"
                }
            },
            "spec": {
                "runPolicy": "Parallel",
                "completionDeadlineSeconds": 1800,
                "triggers": [],
                "source": {
                    "type": "Git",
                    "git": {
                        "ref": "${GIT_REF}",
                        "uri": "${GIT_URL}"
                    },
                    "contextDir": "${CONTEXT_DIR}"
                },
                "strategy": {
                    "jenkinsPipelineStrategy": {
                        "jenkinsfilePath": "Jenkinsfile"
                    },
                    "type": "JenkinsPipeline"
                }
            }
        }
    ],
    "parameters": [{
            "name": "API_SERVICE_NAME",
            "displayName": "Api Service Name",
            "description": "The name of the API Service to be built.",
            "value": "api",
            "required": true
        },
        {
            "name": "API_BUILDER_IMAGE",
            "displayName": "Api Builder Image",
            "description": "The container to use for building the api",
            "value": "api-builder-image",
            "required": true
        },
        {
            "name": "GIT_URL",
            "displayName": "Git Repository URL",
            "required": true,
            "description": "The URL of the repository with your application sourcecode.",
            "value": "https://github.com/bcgov/jag-rsbc-carma"
        },
        {
            "name": "GIT_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch.",
            "value": "master"
        },
        {
            "name": "CONTEXT_DIR",
            "displayName": "Context Directory",
            "description": "Set this to the relative path to your project if it is not in the root of your repository.",
            "value": ""
        }
    ]
}